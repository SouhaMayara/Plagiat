{% extends 'base.html.twig' %}
{% block body %}
  <script type="text/javascript">
    function visibilite(thingId) { var targetElement; targetElement =
    document.getElementById(thingId) ; if (targetElement.style.display ==
    "none") { targetElement.style.display = "" ; } else {
    targetElement.style.display = "none" ; } }
  </script>
  <div class="container-xl">
    <div class="table-responsive">
      <div class="table-wrapper">
        <div class="table-title" style="background: #e3f2fd;color: black;">
          <div class="row">
            <div class="col-sm-6">
              <h2>
                Site map : <b>{{ nom }}</b>
              </h2>
            </div>
          </div>
        </div>

        {# ____________________________________Tableau______________________________________ #}
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>
                URL
              </th>
              <th>
                Détails
              </th>
            </tr>
          </thead>
          <tbody>
            {% for p in listP %}
              <tr style="vertical-align: top;">
                <td valign="top">
                  <a href="{{ p.url }}">
                    <span>
                      {{ p.url }}<span style="color:red;">{% if p.plagiat == 1 %}==>Detection
                        de Plagiat!{% endif %}</span>
                    </span>
                  </a>
                  {# Texte à masquer, afficher #}
                  <div id="{{ p.url }}" style="display:none;padding-top:50px;">
                    <div>
                      {% for content in listC %}
                        {% if content.page.id == p.id %}
                          <div style="margin-left:200px;">
                          {% if content.id in list_id %}
                                <p style="font-size:12px;margin-bottom:0px;">
                                  {{ content.text }}
                                </p>
                          {% endif %}

                            {% for plagia in listCP %}
                              {% if plagia.content.id == content.id %}                                                                                                               
                              {#___deb____#}          
                                <table class="table" style="margin-left:150px;font-size:10px;">
                                        <tbody>
                                        <tr class="table-info">
                                            <td style="font-weight: bold;">URL</td>
                                            <td><a href={{ plagia.url }}>{{ plagia.url }}</a></td>
                                        </tr>
                                        <tr class="table-info">
                                            <td style="font-weight: bold;">Description</td>
                                            <td>{{ plagia.description }}</td>
                                        </tr>
                                        <tr class="table-info">
                                            <td style="font-weight: bold;">Pourcentage plagiat</td>
                                            <td>{{ plagia.plagiat }}%</td>
                                        </tr>
                                        </tbody>
                                </table>
                                {#__fin__#}
                                
                              {% endif %}
                            {% endfor %}
                          </div>
                        {% endif %}
                      {% endfor %}
                    </div>
                  </div>
                </td>

                <td valign="top">
                  <a style="margin-right:10px"
                    href=""
                    onclick="javascript:visibilite('{{
                    p.url
                    }}'); return false;">
                    <button id="monBtn" class="btn">
                      <img src="\yeux.png"
                        alt="icone"
                        style="position:relative; z-index:20; margin:0px;width:27px;height:10px;" />
                    </button>
                  </a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}