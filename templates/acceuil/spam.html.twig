{% extends "base.html.twig" %}
{% block body %}
<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title" style="background: #e3f2fd;color: black;">
				<div class="row">
					<div class="col-sm-6">
						<h2>Gestion <b>Des Spams</b></h2>
					</div>
					<div class="col-sm-6">
						<a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Ajouter</span></a>					
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
                        <th></th>
						<th >Spam</th>
                        <th>Description</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
                {% for spam in list %}
					<tr>
                        <td></td>
						<td>{{spam.url}}</td>
						<td>{{spam.description}}</td>
						<td>
							<a href='/spam/{{spam.id}}'  onclick="validation();" id="ddd" data-method="DELETE" data-confirm="Etes-vous sur?" class="btn btn-danger" style="color:white ;">
							Supprimer
							</a>		
						</td>  
					</tr>
                {% endfor %}
				</tbody>
			</table>


		    <div class="container" style="width:100%;">
  				{% for message in app.flashes('info') %}
  					<div class="alert alert-success">
					<strong>
					<div class="flash-info">
						{{ message }}
					</div>
					</strong>
					</div>
				{% endfor %}
			</div>

		</div>
	</div>        
</div>
{# Add Modal HTML #}
<div id="addEmployeeModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			{#<form>#}
				<div class="modal-header">						
					<h4 class="modal-title">Ajouter un Spam</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
                <div>
					{{ form_start(form) }}
					<div class="form-group" style="margin-left: 2px">URL:{{ form_widget(form.url,{'attr':{'class':'form-control'}}) }}</div>
					<div class="form-group" style="margin-left: 2px">Description:{{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}</div>
					<div style="margin-left:130px">
						<button class="btn btn-info" data-dismiss="modal" value="Cancel">Annuler</button>
						<button class="btn btn-success" type="submit" >Valider</button>
					</div>
					{{ form_end(form) }}
                </div>			
		</div>
	</div>
</div>
{% endblock %}