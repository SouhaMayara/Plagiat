{% extends "base.html.twig" %}
{% block body %}
<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title" style="background: #e3f2fd;color: black;">
				<div class="row">
					<div class="col-sm-6">
						<h2>Gestion <b>Des Sites</b></h2>
					</div>
					<div class="col-sm-6">
						<a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Ajouter</span></a>					
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
                        <th></th>
						<th >Nom Site</th>
                        <th>URL</th>
                        <th>SiteMap</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
                {% for site in list %}
					<tr>
                        <td></td>
                        <td><a href="/infoSite/{{site.id}}/{{site.nom}}">{{site.nom}}</a></td>
						<td><a href="/infoSite/{{site.id}}/{{site.nom}}">{{site.url}}</a></td>
						<td><a href="/infoSite/{{site.id}}/{{site.nom}}">{{site.sitemap}}</a></td>
						<td>
							<a href='/acceuil/{{site.id}}'  onclick="validation();" id="ddd" data-method="DELETE" data-confirm="Etes-vous sur?" class="btn btn-danger" style="color:white ;">
							Supprimer
							</a>
						</td>  
					</tr>
                {% endfor %}
				</tbody>
			</table>
			<div class="container" style="width:100%;">
  				{% for message in app.flashes('info') %}
  					<div class="alert alert-success">
					<strong>
					<div class="flash-info">
						{{ message }}
					</div>
					</strong>
					</div>
				{% endfor %}
			</div>
			
		</div>
	</div>        
</div>
{# Edit Modal HTML #}
<div id="addEmployeeModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			{#<form>#}
				<div class="modal-header">						
					<h4 class="modal-title">Ajouter un site</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
                <div>
					{{ form_start(form) }}
					<div class="form-group" style="margin-left: 2px">Nom:{{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}</div>
					<div class="form-group" style="margin-left: 2px">URL:{{ form_widget(form.url,{'attr':{'class':'form-control'}}) }}</div>
					<div class="form-group" style="margin-left: 2px">Sitemap:{{ form_widget(form.sitemap,{'attr':{'class':'form-control'}}) }}</div>
					<div style="margin-left:130px">
						<button class="btn btn-info" data-dismiss="modal" value="Cancel">Annuler</button>
						<button class="btn btn-success" type="submit" >Valider</button>
					</div>

					{{ form_end(form) }}
                </div>
				
		</div>
	</div>
</div>
{# Edit Modal HTML #}
<div id="editEmployeeModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form>
				<div class="modal-header">						
					<h4 class="modal-title">Editer Site</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<div class="form-group">
						<label>Nom</label>
						<input type="text" class="form-control" required>
					</div>
					<div class="form-group">
						<label>URL</label>
						<input type="email" class="form-control" required>
					</div>
					<div class="form-group">
						<label>SiteMap</label>
						<input type="email" class="form-control" required>
					</div>		
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-info" value="Save">
				</div>
			</form>
		</div>
	</div>
</div>
{# Delete Modal HTML #}
<div id="deleteEmployeeModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form>
				<div class="modal-header">						
					<h4 class="modal-title">Supprimer Site</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<p>confirmer suppression ?</p>
					<p class="text-warning"><small>Cette action ne peut pas être annulée.</small></p>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Annuler">
					<a href="#ddd"><input type="submit" class="btn btn-danger" value="Supprimer"></a>
					
				
				</div>
			</form>
		</div>
	</div>
</div>
<script type="text/javascript">
function valid()
{
	sweetalert("supp!","supp","error");
	//swal("site supprimé!","suppression","success");
}
</script>
{% endblock %}